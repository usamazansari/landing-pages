---
import Layout from '../../Layout/Layout.astro';
import Head from '../../components/astro/landing-pages/news/Head.astro';
import { NewsApp } from '../../components/react/landing-pages/news';

const { category } = Astro.params;
const apiKey = import.meta.env.NEWS_API_KEY;
---

<Layout>
  <Head slot="head" />
  <NewsApp apiKey={apiKey} selectedCategory={category} client:load />
</Layout>
